{{#unless isOpen}}
  <md-expansion-panel-collapsed onclick={{action onExpand}} onmouseenter={{action onMouseEnter}} onmouseleave={{action onMouseLeave}}>
    {{yield (hash
      isHovered=isHoveredOrOpen
      menu=(component "paper-menu" onOpen=(action (mut menuOpen) true) onClose=(action onClose))
    )}}
  </md-expansion-panel-collapsed>
{{/unless}}